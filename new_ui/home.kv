<HomeScreen>:
    name: 'home'
    md_bg_color: [0.9,0,0.6,0.1]
    MDBoxLayout:
        orientation: 'vertical'
        padding: ('10dp', '20dp', '10dp', '10dp')
        spacing: '20dp'
        MDLabel:
            text: "[size=18]Hi,[/size]\n[size=36][b]Igbana[/b][/size]"
            markup: True
            size_hint_y: None
            height: self.texture_size[1]
            pos_hint: {'x': 0.0,'center_y': 0.5}
        Carousel:
            size_hint_y: None
            height: '120dp'
            MDCard:
                size_hint: (0.95, None)
                height: '120dp'
                radius: 10
                pos_hint: {'center_x': 0.5}
        ScrollView:
            size_hint_x: 0.95
            pos_hint: {'center_x': 0.5}
            padding: ('10dp', '10dp', '10dp', '10dp')
            MDList:
                spacing: '10dp'
                ListItem:
                ListItem:
                ListItem:
                ListItem:
                ListItem:
                ListItem:
                ListItem:
                ListItem: