<SplashScreen>:
    name: 'splash'
    md_bg_color: [0.9,0,0.6,1]
    MDLabel:
        text: "Plan"
        font_size: '80sp'
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        font_name: 'Helve Cursive.ttf'
        bold: True
        halign: 'center'
        color: [1,1,1,1]
    MDLabel:
        text: 'Loading...'
        pos_hint: {'center_x': 0.5,'y': 0.1}
        halign: 'center'
        font_size: '14sp'
        color: [1,1,1,1]
        size_hint_y: None
        height: self.texture_size[1]